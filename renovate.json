{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergeMinor",
    ":automergeStableNonMajor",
    ":automergeDigest",
    ":renovatePrefix",
    ":timezone(America/Vancouver)",
    "schedule:automergeDaily",
    ":reviewer(rachelf42)"
  ],
  "automergeType": "branch",
  "automergeStrategy": "squash",
  "docker-compose": {
    "managerFilePatterns": [
      "/^docker/[a-zA-Z0-9-]*\\.compose.yaml/"
    ]
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "action"
      ],
      "pinDigests": true,
      "automerge": true
    },
    {
      "matchPackageNames": [
        "ansible-lint"
      ],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": ["/^.github/workflows/main.yaml$/"],
      "matchStrings": ["jobs.lint.steps[10].with.{\"currentValue\": terraform_version}"],
      "depNameTemplate": "hashicorp/terraform",
      "datasourceTemplate": "terraform-provider",
      "versioningTemplate": "hashicorp"
    }
  ]
}
